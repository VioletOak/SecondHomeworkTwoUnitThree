<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/cat"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#1C3950"
        android:gravity="center"
        android:text="КОТ ШРЕДИНГЕРА"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/coordinatesOut"
        android:layout_width="350dp"
        android:layout_height="620dp"
        android:background="#6A989E"
        android:gravity="center_horizontal"
        android:hint="Отображение координат касания экрана"
        android:textColor="@android:color/holo_green_light"
        android:textColorHighlight="@android:color/holo_green_light"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="83dp" />
</androidx.constraintlayout.widget.ConstraintLayout>